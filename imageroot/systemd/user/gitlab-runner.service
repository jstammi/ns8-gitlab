#
# This systemd unit starts a gitlab instance using Podman.
# Most parts of this file come from podman-generate-systemd.
#
[Unit]
Description=GitLab Runner

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=%S/state/environment
WorkingDirectory=%S/state
Restart=always
ExecStartPre=/bin/rm -f %t/gitlab-runner.pid %t/gitlab-runner.ctr-id
ExecStartPre=-runagent discover-smarthost
ExecStart=/usr/bin/podman run \
    --detach \
    --name gitlab-runner \
    --conmon-pidfile=%t/gitlab-runner.pid \
    --cidfile=%t/gitlab-runner.ctr-id \
    --cgroups=no-conmon \
    --pod-id-file %t/gitlab.pod-id \
    --replace \
    --volume gitlab-runner-config:/etc/gitlab-runner:Z \
    --volume gitlab-runner-machine-config:/root/.docker/machine:Z \
    --volume /run/user/${UID}/podman/podman.sock:/var/run/docker.sock \
    ${GITLAB_RUNNER_IMAGE}
ExecStop=/usr/bin/podman stop --ignore --cidfile %t/gitlab-app.ctr-id -t 10
ExecStopPost=/usr/bin/podman rm --ignore -f --cidfile %t/gitlab-app.ctr-id
PIDFile=%t/gitlab-app.pid
Type=forking

[Install]
WantedBy=default.target
