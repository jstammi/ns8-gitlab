import json
import sys
import os
import agent
import agent.tasks

data = json.load(sys.stdin)

# Setup variables
host = data.get("host")
ldap_domain = data.get("ldap_domain")
registry_host = data.get("registry_host")

if host != agent.get_env("HOST") and agent.http_route_in_use(domain=host):
    agent.set_status('validation-failed')
    json.dump([{'field':'hostname','parameter':'hostname','value':host,'error':'domain_already_used_in_traefik'}],fp=sys.stdout)
    sys.exit(2)

agent.set_env("HOST", host)
agent.set_env("LDAP_DOMAIN", ldap_domain)
agent.set_env("REGISTRY_HOST", registry_host)

default_traefik_id = agent.resolve_agent_id('traefik@node')
if default_traefik_id is None:
    sys.exit(2)

# Configure traefik virtual host
response = agent.tasks.run(
    agent_id=default_traefik_id,
    action='set-route',
    data={
        'instance': os.environ['MODULE_ID'],
        'url': f'http://127.0.0.1:{os.environ["TCP_PORT"]}',
        'host': host,
        'lets_encrypt': True,
        'http2https': True
    },
)