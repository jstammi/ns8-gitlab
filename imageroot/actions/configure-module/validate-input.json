{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure dokuwiki",
    "$id": "http://nethserver.org/json-schema/task/input/dokuwiki/configure",
    "description": "Configure dokuwiki",
    "examples": [
        {
            "wiki_name": "mywiki",
            "username": "admin",
            "password": "admin",
            "email": "admin@test.local",
            "user_full_name": "Administrator",
            "host": "wiki.nethserver.org",
            "http2https": true,
            "lets_encrypt": true
        }
    ],
    "type": "object",
    "required": [
        "host",
        "http2https",
        "lets_encrypt"
    ],
    "properties": {
        "host": {
            "type": "string",
            "description": "Host name for gitlab, like 'git.nethserver.org'",
            "format": "hostname",
            "pattern": "\\."
        },
        "lets_encrypt": {
            "type": "boolean",
            "title": "Let's Encrypt certificate",
            "description": "Request a valid Let's Encrypt certificate."
        },
        "http2https": {
            "type": "boolean",
            "title": "HTTP to HTTPS redirection",
            "description": "Redirect all the HTTP requests to HTTPS"
        }
    }
}